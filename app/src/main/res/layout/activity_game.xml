<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.matthieuc.topquiz.controller.GameActivity">

    <TextView
        android:id="@+id/activity_game_question_txt"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="30dp"
        android:textColor="#39b44a"
        android:text="Question"/>

    <Button
        android:id="@+id/activity_game_answerbtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#107799"
        android:textSize="20sp"
        android:text="Réponse 1"/>
    <Button
        android:id="@+id/activity_game_answerbtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#107799"
        android:textSize="20sp"
        android:text="Réponse 2"/>
    <Button
        android:id="@+id/activity_game_answerbtn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#107799"
        android:textSize="20sp"
        android:text="Réponse 3"/>
    <Button
        android:id="@+id/activity_game_answerbtn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#107799"
        android:textSize="20sp"
        android:text="Réponse 4"/>

</LinearLayout>
